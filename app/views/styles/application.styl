@import 'nib'

body
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: 12px;
  color: #333333;
  background-color: #FFFFFF;
  background-image: url("/CommandCenter/kiosk/images/top.jpg");
  background-repeat: repeat-x;
  background-position: left top;
  margin: 0px;

.error
  color: red

.errorTxt
  font-size : 12px
  min-height: 20px

.scroll
  height: 230px;
  overflow: auto;
  width: 100%;
  padding-top 10px


.rlx-modal
  background-color: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 9px;
  box-shadow: 0 8px 6px -6px black;
  display: none;
  width: 700px !important;
  height: 300px !important;

.rlx-alert-modal
  background-color: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 9px;
  box-shadow: 0 8px 6px -6px black;
  display: none;
  width: 400px !important;
  height: 220px !important;

.rlx-select-driver-modal
  background-color: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 9px;
  box-shadow: 0 8px 6px -6px black;
  display: none;
  height: 400px !important;

.rlx-driver-name
  width 10%

